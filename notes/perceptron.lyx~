\begin_body

\begin_layout Title
The Perceptron
\end_layout

\begin_layout Section
Message Passing Binary Perceptron
\end_layout

\begin_layout Subsection
BP
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
u_{\mu\to i}=\frac{\xi_{i}^{\mu}}{\sqrt{\Delta_{\mu\to i}}}K\left(-\frac{M_{\mu\to i}}{\sqrt{\Delta_{\mu\to i}}}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula 
\begin{align}
M_{\mu\to i} & =\frac{1}{\sqrt{N}}\sum_{j\neq i}\xi_{j}^{\mu}m_{\mu\to j}\\
\Delta_{\mu\to i} & =\frac{1}{N}\sum_{j\neq i}(\xi_{j}^{\mu})^{2}\left(1-m_{\mu\to j}^{2}\right)
\end{align}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
m_{i\to\mu}=\tanh\left(\frac{1}{\sqrt{N}}\sum_{\nu\neq\mu}u_{\nu\to i}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Subsection
TAP
\end_layout

\begin_layout Section
Replica Calculation Standard Perceptron
\end_layout

\begin_layout Standard
We consider a perceptron with binary or continuous variables, that we shall
 assume take value in some measure space 
\begin_inset Formula $\Omega$
\end_inset

.
 We also impose the norm 
\begin_inset Formula $q_{*}N$
\end_inset

, with 
\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none
of course 
\begin_inset Formula $q_{*}=1$
\end_inset


\family default
\series default
\shape default
\size default
\emph default
\bar default
\strikeout default
\uuline default
\uwave default
\noun default
\color inherit
 for binary synapsis.
 In particular we shall consider 
\begin_inset Formula $\Omega=[-\infty,+\infty]$
\end_inset

, 
\begin_inset Formula $\Omega=[-1,+1]$
\end_inset

 and 
\begin_inset Formula $\Omega=\{-1,+1\}$
\end_inset

.
\end_layout

\begin_layout Standard
We will allow for a generic energy function 
\begin_inset Formula $f\left(\frac{\sum_{i}\xi_{i}^{\mu}W_{i}}{\sqrt{N}}\right)$
\end_inset

.
\end_layout

\begin_layout Subsection
Entropy Calculation
\end_layout

\begin_layout Standard
The replicated partition function of the model is given by
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\overline{Z^{n}}=\int_{\Omega}\prod_{a,i}\mathrm{d}W_{i}^{a}\ \prod_{a}\delta\left(\sum_{i}\left(W_{i}^{a}\right)^{2}-q_{*}N\right)\ \prod_{\mu,a}f\left(\frac{\sum_{i}\xi_{i}^{\mu}W_{i}^{a}}{\sqrt{N}}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula $q_{*}$
\end_inset

 is an external fixed normalization (generally 
\begin_inset Formula $q_{*}=1$
\end_inset

) and where 
\begin_inset Formula $f$
\end_inset

 is a generic energetic term (e.g.
 
\begin_inset Formula $f(x)=\theta(x)$
\end_inset

).
\end_layout

\begin_layout Standard
After some manipulations 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\overline{Z^{n}}=\int\prod_{a}\frac{\mathrm{d}\hat{q}_{aa}}{2\pi}\prod_{a<b}\frac{\mathrm{d}\hat{q}_{ab}\mathrm{d}q_{ab}}{2\pi}e^{N\phi[\hat{q},q]}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where the replicated action is given by
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\phi[\hat{q},q]=-\frac{1}{2}\sum_{a,b}\hat{q}_{ab}\,q_{ab}+G_{S}+\alpha G_{E}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where we identified 
\begin_inset Formula $q_{aa}=q_{*}$
\end_inset

 and
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
G_{S}[\hat{q}] & =\log\int_{\Omega}\prod_{a}\dd W_{a}\ e^{\frac{1}{2}\sum_{ab}\hat{q}_{ab}W_{a}W_{b}}\\
G_{E}[q] & =\log\int\prod_{a}\frac{\dd\hat{u}_{a}\dd u_{a}}{2\pi}\ e^{-\frac{1}{2}\sum_{ab}q_{ab}\hat{u}_{a}\hat{u}_{b}+i\hat{u}_{a}u_{a}}\prod_{a}f(u_{a})
\end{align}

\end_inset


\end_layout

\begin_layout Standard
Saddle point equation read
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\hat{q}_{ab} & =-\alpha\ll\hat{u}_{a}\hat{u}_{b}\gg_{E}\qquad a>b\\
q_{ab} & =\ll W_{a}W_{b}\gg_{S}\qquad a>b\\
q_{aa} & \equiv q_{*}=\ll W_{a}^{2}\gg_{S}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
Last equations should be solved implicitly for 
\begin_inset Formula $\hat{q}_{aa}$
\end_inset

.
\end_layout

\begin_layout Subsection
RS ansatz
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{1}{n}\phi[\hat{q},q]\sim-\frac{1}{2}(q_{*}\hat{q}_{1}-q_{0}\hat{q}_{0})+\mathcal{G}_{s}+\alpha\mathcal{G}_{E}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\mathcal{G}_{S}[\hat{q}] & =\int\mathcal{D}z_{0}\log\int_{\Omega}\mathrm{d}W\ e^{\frac{1}{2}(\hat{q}_{1}-\hat{q}_{0})W^{2}+\sqrt{\hat{q}_{0}}z_{0}W}\\
\mathcal{G}_{E}[q] & =\int\mathcal{D}z_{0}\log\int\mathcal{D}u\ f\left(\sqrt{q_{0}}z_{0}+\sqrt{q_{*}-q_{0}}u\right)
\end{align}

\end_inset


\end_layout

\begin_layout Standard
For the binary Percetron 
\begin_inset Formula $\hat{q}_{1}=0,q_{*}=1,\int dW=\sum_{W=\pm1}$
\end_inset

.
\end_layout

\begin_layout Standard
Saddle points condition, obtained by derivation of last equations, read
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\hat{q}_{0} & =\alpha\int\mathcal{D}z_{0}\left(\frac{\int\mathcal{D}u\ f'\left(\sqrt{q_{0}}z_{0}+\sqrt{q_{*}-q_{0}}u\right)}{\int\mathcal{D}u\ f\left(\sqrt{q_{0}}z_{0}+\sqrt{q_{*}-q_{0}}u\right)}\right)^{2}\\
q_{0} & =\int\mathcal{D}z_{0}\ \left(\frac{\int_{\Omega}\dd W\ e^{\frac{1}{2}(\hat{q}_{1}-\hat{q}_{0})W^{2}+\sqrt{\hat{q}_{0}}z_{0}W}\,W}{\int_{\Omega}\dd W\ e^{\frac{1}{2}(\hat{q}_{1}-\hat{q}_{0})W^{2}+\sqrt{\hat{q}_{0}}z_{0}W}}\right)^{2}\\
q_{*} & =\int\mathcal{D}z_{0}\ \frac{\int_{\Omega}\dd W\ e^{\frac{1}{2}(\hat{q}_{1}-\hat{q}_{0})W^{2}+\sqrt{\hat{q}_{0}}z_{0}W}\,W^{2}}{\int_{\Omega}\dd W\ e^{\frac{1}{2}(\hat{q}_{1}-\hat{q}_{0})W^{2}+\sqrt{\hat{q}_{0}}z_{0}W}}
\end{align}

\end_inset


\end_layout

\begin_layout Subsubsection
case 
\begin_inset Formula $\int_{-\infty}^{+\infty}dW$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\mathcal{G}_{S}[\hat{q}] & =\frac{1}{2}\log(2\pi)+\frac{\hat{q}_{0}}{2(\hat{q}_{0}-\hat{q}_{1})}-\frac{1}{2}\log(\hat{q}_{0}-\hat{q}_{1})\\
q_{0} & =\frac{\hat{q}_{0}}{(\hat{q}_{0}-\hat{q}_{1})^{2}}\\
q_{*} & =\frac{2\hat{q}_{0}-\hat{q}_{1}}{(\hat{q}_{0}-\hat{q}_{1})^{2}}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
Last equation solved for 
\begin_inset Formula $\hat{q}_{1}$
\end_inset

 gives
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\hat{q}_{1}=\frac{-1+2\hat{q}_{0}q_{*}-\sqrt{1+4\hat{q}_{0}q_{*}}}{2q_{*}}
\end{equation}

\end_inset


\end_layout

\begin_layout Subsubsection
case 
\begin_inset Formula $\int_{-1}^{+1}dW$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
G_{S}=-\frac{1}{2}\log a+\int\mathcal{D}z_{0}\ \log\left[\sqrt{\frac{\pi}{2}}e^{-\frac{b^{2}}{2a}}\left(\text{erfi}\left(\frac{a-b}{\sqrt{2}\sqrt{a}}\right)+\text{erfi}\left(\frac{a+b}{\sqrt{2}\sqrt{a}}\right)\right)\right]
\end{equation}

\end_inset


\end_layout

\begin_layout Subsubsection
case 
\begin_inset Formula $\sum_{W=\pm1}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{G}_{S}[\hat{q}]=\frac{1}{2}(\hat{q}_{1}-\hat{q}_{0})+\int\mathcal{D}z_{0}\log2\cosh\left(\sqrt{\hat{q}_{0}}z_{0}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
q_{0}=\int\mathcal{D}z_{0}\ \tanh^{2}\left(\sqrt{\hat{q}_{0}}z_{0}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\hat{q}_{1}$
\end_inset

 in this case is undetermined and can be set to 
\begin_inset Formula $0$
\end_inset


\end_layout

\begin_layout Subsubsection
case 
\begin_inset Formula $f(x)=\theta(x)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{G}_{E}[q]=\int\mathcal{D}z_{0}\log H\left(-\frac{\sqrt{q_{0}}z_{0}}{\sqrt{q_{*}-q_{0}}}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\hat{q}_{0}=\frac{1}{q_{*}-q_{0}}\int\mathcal{D}z_{0}\left(\frac{G\left(-\frac{\sqrt{q_{0}}z_{0}}{\sqrt{q_{*}-q_{0}}}\right)}{H\left(-\frac{\sqrt{q_{0}}z_{0}}{\sqrt{q_{*}-q_{0}}}\right)}\right)^{2}
\end{equation}

\end_inset


\end_layout

\begin_layout Subsubsection
case 
\begin_inset Formula $f(x)=H^{\beta}\left(-\frac{x}{\sqrt{1-q_{*}}}\right)$
\end_inset

 (likelihood)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{G}_{E}[q]=\int\mathcal{D}z_{0}\log\int\mathcal{D}u\ H^{\beta}\left(-\frac{\sqrt{q_{0}}z_{0}+\sqrt{q_{*}-q_{0}}u}{\sqrt{1-q_{*}}}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Subsection
RS Stability
\end_layout

\begin_layout Standard
Following the derivation of Derrida and Gardner we give the following stability
 criterion for the replicon eigenvalue of the RS solution
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\text{\alpha}\gamma_{E}\gamma_{S}<1
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\gamma_{E} & =\int\mathcal{D}z_{0}\left[\overline{\hat{u}^{2}}(z_{0})-\left(\overline{\hat{u}}(z_{0})\right)^{2}\right]^{2}\\
\gamma_{S} & =\int\mathcal{D}z_{0}\left[\overline{W^{2}}(z_{0})-\left(\overline{W}(z_{0})\right)^{2}\right]^{2}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
where
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\overline{\hat{u}^{k}}(z_{0}) & \equiv\frac{\int\frac{\dd\hat{u}\dd u}{2\pi}\ \hat{u}^{k}\,e^{-\frac{1}{2}(q_{*}-q_{0})\hat{u}^{2}+i\hat{u}u+i\hat{u}\sqrt{q_{0}}z_{0}}f(u)}{\int\frac{\dd\hat{u}\dd u}{2\pi}\ e^{-\frac{1}{2}(q_{*}-q_{0})\hat{u}^{2}+i\hat{u}u+i\hat{u}\sqrt{q_{0}}z_{0}}f(u)}\\
\overline{W^{k}}(z_{0}) & \equiv\frac{\int_{\Omega}\dd W\ W^{k}\,e^{\frac{1}{2}(\hat{q}_{1}-\hat{q}_{0})W^{2}+\sqrt{\hat{q}_{0}}z_{0}W}}{\int_{\Omega}\dd W\ e^{\frac{1}{2}(\hat{q}_{1}-\hat{q}_{0})W^{2}+\sqrt{\hat{q}_{0}}z_{0}W}}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
Equation EQ can be simplified to 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\overline{\hat{u}^{k}}(z_{0})=\frac{i^{k}\int\mathcal{D}u\ f^{(k)}\left(\sqrt{q_{0}}z_{0}+\sqrt{q_{*}-q_{0}}u\right)}{\int\mathcal{D}u\ f\left(\sqrt{q_{0}}z_{0}+\sqrt{q_{*}-q_{0}}u\right)}
\end{equation}

\end_inset


\end_layout

\begin_layout Subsection
Parisi-Franz with binary perceptron
\end_layout

\begin_layout Standard
Now we couple with our system, that we shall denote with 
\begin_inset Formula $\tilde{W}$
\end_inset

, a binary perceptron 
\begin_inset Formula $W$
\end_inset

.
 We enforce an overlap 
\begin_inset Formula $S=\frac{1}{N}\sum_{i}W_{i}\sign(\tilde{W}_{i}$
\end_inset

).
 For binary 
\begin_inset Formula $\tilde{W}$
\end_inset

 this corresponds to a standard overlap.
 
\begin_inset Formula 
\begin{equation}
\phi_{FP}(S)=-\frac{1}{2}\hat{Q}\left(1-Q\right)+\hat{s}_{0}s_{0}-\hat{s}_{1}s_{1}-\gamma S+G_{S}+\alpha G_{E}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
G_{S}=\int\dD z_{0}\,\frac{\int_{\Omega}\dd\tilde{W}\int\mathcal{D}\eta\ e^{\frac{1}{2}(\hat{q}_{1}-\hat{q}_{0})\tilde{W}^{2}+\sqrt{\hat{q}_{0}}z_{0}\tilde{W}}A_{S}(\tilde{W},\eta,z_{0})}{\int_{\Omega}\dd\tilde{W}\ e^{\frac{1}{2}(\hat{q}_{1}-\hat{q}_{0})\tilde{W}^{2}+\sqrt{\hat{q}_{0}}z_{0}\tilde{W}}}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
A_{S}(\tilde{W},\eta,z_{0})=\log2\cosh\left((\hat{s}_{1}-\hat{s}_{0})\tilde{W}+\gamma\sign(\tilde{W})+\sqrt{\frac{\hat{Q}\hat{q}_{0}-\hat{s}_{0}^{2}}{\hat{q}_{0}}}\eta+\frac{\hat{s}_{0}}{\sqrt{\hat{q}_{0}}}z_{0}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
G_{E}=\int\mathcal{D}z_{0}\frac{\int\mathcal{D}\eta\mathcal{D}z_{1}\ f\left(\sqrt{q_{0}}z_{0}+\sqrt{a}z_{1}+\frac{s_{1}-s_{0}}{\sqrt{b}}\eta\right)\log H\left(-\frac{\sqrt{b}\eta+\frac{s_{0}}{\sqrt{q_{0}}}z_{0}}{\sqrt{1-Q}}\right)}{\int\mathcal{D}z_{1}\ f\left(\sqrt{q_{0}}z_{0}+\sqrt{q_{*}-q_{0}}z_{1}\right)}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
a & =q_{*}-q_{0}-\frac{\left(s_{1}-s_{0}\right)^{2}}{\left(Q-s_{0}\right)}\left(1-\frac{s_{0}\left(q_{0}-s_{0}\right)}{\left(Qq_{0}-s_{0}^{2}\right)}\right)\\
b & =\frac{Qq_{0}-s_{0}^{2}}{q_{0}}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
Saddle point equations read
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\hat{Q} & =-2\alpha\frac{\partial G_{E}}{\partial Q}\\
Q & =1-2\frac{\partial G_{S}}{\partial\hat{Q}}\\
s_{0} & =-\frac{\partial G_{S}}{\partial\hat{s}_{0}}\\
\hat{s}_{0} & =-\alpha\frac{\partial G_{E}}{\partial s_{0}}\\
s_{1} & =\frac{\partial G_{S}}{\partial\hat{s}_{1}}\\
\hat{s}_{1} & =\alpha\frac{\partial G_{E}}{\partial s_{1}}\\
S & =\frac{\partial G_{S}}{\partial\gamma}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
In the case of binary 
\begin_inset Formula $\tilde{W}$
\end_inset

 we can set 
\begin_inset Formula $\gamma=0$
\end_inset

, 
\begin_inset Formula $s_{1}=S$
\end_inset

, and drop last two equations.
\end_layout

\begin_layout Subsubsection
case 
\begin_inset Formula $\sum_{\tilde{W}=\pm1}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
G_{S}=\int\dD z_{0}\,\frac{\sum_{\tilde{W}=\pm1}\int\mathcal{D}\eta\ e^{\sqrt{\hat{q}_{0}}z_{0}\tilde{W}}A_{S}(\tilde{W},\eta,z_{0})}{2\cosh\left(\sqrt{\hat{q}_{0}}z_{0}\tilde{W}\right)}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
A_{S}(\tilde{W},\eta,z_{0})=\log2\cosh\left((\hat{s}_{1}-\hat{s}_{0})\tilde{W}+\sqrt{\frac{\hat{Q}\hat{q}_{0}-\hat{s}_{0}^{2}}{\hat{q}_{0}}}\eta+\frac{\hat{s}_{0}}{\sqrt{\hat{q}_{0}}}z_{0}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Subsubsection
case 
\begin_inset Formula $\int_{-\infty}^{+\infty}d\tilde{W}$
\end_inset


\end_layout

\begin_layout Standard
assuming 
\begin_inset Formula $\hat{q}_{0}>\hat{q}_{1}.$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
G_{S}=\int\dD z_{0}\mathcal{D}\tilde{W}\mathcal{D}\eta\ A_{S}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
A_{S} & =\log2\cosh\left(\frac{(\hat{s}_{1}-\hat{s}_{0})}{\hat{q}_{0}-\hat{q}_{1}}\left(\sqrt{\hat{q}_{0}-\hat{q}_{1}}\tilde{W}+\sqrt{\hat{q}_{0}}z_{0}\right)+\gamma\sign\left(\sqrt{\hat{q}_{0}-\hat{q}_{1}}\tilde{W}+\sqrt{\hat{q}_{0}}z_{0}\right)+\sqrt{\frac{\hat{Q}\hat{q}_{0}-\hat{s}_{0}^{2}}{\hat{q}_{0}}}\eta+\frac{\hat{s}_{0}}{\sqrt{\hat{q}_{0}}}z_{0}\right)
\end{align}

\end_inset

which can be simplified to
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
G_{S}=\int\mathcal{D}\tilde{W}\mathcal{D}z_{0}\ \log2\cosh\left[\left(\frac{\hat{s}_{1}-\hat{s}_{0}}{\hat{q}_{0}-\hat{q}_{1}}\sqrt{2\hat{q}_{0}-\hat{q}_{1}}+\frac{\hat{s}_{0}}{\sqrt{2\hat{q}_{0}-\hat{q}_{1}}}\right)\tilde{W}+\gamma\sign(\tilde{W})+\sqrt{\hat{Q}-\frac{\hat{s}_{0}^{2}}{2\hat{q}_{0}-\hat{q}_{1}}}z_{0}\right]
\end{equation}

\end_inset


\end_layout

\begin_layout Subsubsection
case 
\begin_inset Formula $\int_{-1}^{+1}d\tilde{W}$
\end_inset

 
\end_layout

\begin_layout Standard
The denominator reads
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
I_{0}\equiv\int_{-1}^{1}\dd\tilde{W}\ e^{\frac{1}{2}(\hat{q}_{1}-\hat{q}_{0})\tilde{W}^{2}+\sqrt{\hat{q}_{0}}z_{0}\tilde{W}}=e^{\frac{\hat{q}_{0}z_{0}^{2}}{2(\hat{q}_{0-}\hat{q}_{1})}}\sqrt{\frac{\pi}{2|\hat{q}_{1}-\hat{q}_{0}|}}\times\left(\erf_{\epsilon}\left(\frac{|\hat{q}_{1}-\hat{q}_{0}|+\sqrt{\hat{q}_{0}}z_{0}}{\sqrt{2|\hat{q}_{1}-\hat{q}_{0}|}}\right)+\erf_{\epsilon}\left(\frac{|\hat{q}_{1}-\hat{q}_{0}|-\sqrt{\hat{q}_{0}}z_{0}}{\sqrt{2|\hat{q}_{1}-\hat{q}_{0}|}}\right)\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Where 
\begin_inset Formula $\erf_{\epsilon}(x)=\erf(x)$
\end_inset

 if 
\begin_inset Formula $\hat{q}_{1}<\hat{q}_{0}$
\end_inset

 and 
\begin_inset Formula $\erf_{\epsilon}(x)=\erfi(x)$
\end_inset

 otherwise.
\end_layout

\begin_layout Standard
We split the numerator in two parts.
 The first is defined as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
I_{+}=\int_{-\infty}^{+\infty}\dd\tilde{W}\frac{\dd\eta}{\sqrt{2\pi}}\ I\left(0<\tilde{W}<1\right)e^{-\frac{1}{2}\eta^{2}+\frac{1}{2}(\hat{q}_{1}-\hat{q}_{0})\tilde{W}^{2}+\sqrt{\hat{q}_{0}}z_{0}\tilde{W}}\log2\cosh\left((\hat{s}_{1}-\hat{s}_{0})\tilde{W}+\gamma+\sqrt{\frac{\hat{Q}\hat{q}_{0}-\hat{s}_{0}^{2}}{\hat{q}_{0}}}\eta+\frac{\hat{s}_{0}}{\sqrt{\hat{q}_{0}}}z_{0}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
with a change of variables we obtain
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
